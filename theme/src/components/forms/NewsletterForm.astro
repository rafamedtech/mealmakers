---
import {Icon} from 'astro-icon'
import {Button, FormInput } from "@littlesticks/odyssey-theme-components";

---

<form name="Newsletter Form" method="POST" action="https://api.sheetmonkey.io/form/iHpUeZY3oZ66Neuni5qeEz">
  <div class="newsletter-form__container">
    <FormInput  name="Email" placeholder="tucorreo@correo.com" required/>
    <Button customIcon>Enviar
      <Fragment slot="icon">
        <Icon name="ic:baseline-chevron-right" />
      </Fragment>
    </Button>
  </div>
</form>

<style>
form {
    width: 100%;
}
.newsletter-form__container {
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 1rem;
  
}
@media (max-width: 600px) {
  .newsletter-form__container {
    grid-template-columns: 1fr;
  }
}
</style>