---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Google Search",
  "Redes sociales",
  "Email",
  "Un amigo"
]

---

<form name="Contact Form" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="Nombre" name="Name" placeholder="John Doe" />
  <FormInput type="email" label="Email" name="Email" placeholder="hello@example.com" />
  <FormSelect label="Cómo te enteraste de nosotros?" options={selectOptions} />
  <FormTextarea label="Mensaje" name="Message" placeholder="Tu mensaje aquí..." />
  <Button>Enviar</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>